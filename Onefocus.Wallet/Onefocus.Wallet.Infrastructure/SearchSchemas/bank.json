        "edge_ngram_filter": {
          "type": "edge_ngram",
          "min_gram": 2,
          "max_gram": 20
        }
      },
      "analyzer": {
        "startwith_index": {
          "tokenizer": "standard",
          "filter": [ "lowercase", "folding", "edge_ngram_filter" ]
        },
        "search": {
          "tokenizer": "standard",
          "filter": [ "lowercase", "folding" ]
        }
      }
    }
  }
