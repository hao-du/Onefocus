{
  "mappings": {
    "properties": {
      "id": {
        "type": "keyword"
      },
      "name": {
        "analyzer": "startwith_index",
        "search_analyzer": "search",
        "fields": {
          "keyword": {
            "type": "keyword"
          }
        },
        "type": "text"
      },
      "description": {
        "analyzer": "startwith_index",
        "search_analyzer": "search",
        "fields": {
          "keyword": {
            "type": "keyword"
          }
        },
        "type": "text"
      },
      "isActive": {
        "type": "boolean"
      },
      "ownerUserId": {
        "type": "keyword"
      }
    }
  },
  "settings": {
    "index": {
      "number_of_shards": 1,
      "number_of_replicas": 1,
      "refresh_interval": "1s"
    },
    "analysis": {
      "filter": {
        "folding": {
          "type": "asciifolding",
          "preserve_original": false
